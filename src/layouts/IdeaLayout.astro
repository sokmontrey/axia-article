---
import BaseLayout from './BaseLayout.astro'
import Logo from '@/components/Logo.astro'

const { title, description } = Astro.props.frontmatter;

const body_class = "px-5 w-full md:px-10 md:w-[80%] md:mx-auto lg:w-[55%] lg:mx-0 lg:px-20 xl:w-[45%] 2xl:w-[37%] xl:py-5 xl:px-[6rem] ";
---

<BaseLayout title={title}>
  <nav class="md:px-8 md:pt-5">
    <a href="/" class="p-5 flex items-center nt-color opacity-70 hover:opacity-100 hover:text-[var(--pmc-color)] ">
      <i class="fa-solid fa-chevron-left pr-2 "></i>
      <Logo />
    </a>
  </nav>

  <header class={body_class}>
    <h1 class="pm-color font-bold lg:text-[3rem]">{title}</h1>
    <p>{description}</p>
    <hr class="mt-5 border-dashed opacity-30"/>
  </header>

  <main class={body_class + " py-5"}>
    <slot />
  </main>
</BaseLayout>
